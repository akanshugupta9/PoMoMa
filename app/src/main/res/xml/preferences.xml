<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="Rs."
        android:key="denomination_preference"
        android:title="Denomination"
        android:entries="@array/Denomination"
        android:entryValues="@array/denominationAlias"/>

    <EditTextPreference
        android:title="Pocket Money"
        android:key="pocket_money"
        android:defaultValue="0"
        android:inputType="number" />

    <ListPreference
        android:defaultValue="Daily"
        android:key="frequency_preference"
        android:title="Pocket Money Frequency"
        android:entries="@array/Frequency"
        android:entryValues="@array/frequencyAlias"/>

</PreferenceScreen>